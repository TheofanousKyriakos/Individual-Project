<%- include("partials/header"); -%>
    <h1><%= title %></h1>
 <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Date of Birth</th>
                    <th scope="col">Tuition Fees</th>
                    <th width="200px">Action</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i < student.length; i++) { %>
                <tr>
                    <th scope="row"><%= (i+1) %></th>
                    <td><%= student[i].sfname%></td>
                    <td><%= student[i].slname%></td>
                    <td><%= student[i].sdob.toLocaleString()%></td>
                    <td><%= student[i].tfees%></td>
                    <td>
                        <a class="btn btn-success edit" href="<%= url + '/edit/student/' + student[i].sid %>">Edit</a>                       
                        <button class="btn btn-danger delete" onclick="deleteStudent ('<%= url %>' + '/delete/student/' + '<%= student[i].sid %>')"> Delete</button>                       
                   </td>
                </tr>
            <% } %>
            
            </tbody>
        </table>
    <div id="error"><%= message %></div>
<script>
    function deleteStudent(url) {
        console.log(url);
      var dialog = confirm("Are you sure you want to delete this student?");
      if(dialog) {
        window.location.replace(url);
        
      } else alert("The student is safe for now!!!");
       
    }
  </script>

